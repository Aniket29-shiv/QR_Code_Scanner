<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:src="@drawable/location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Kukatpally,Telanganna"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_marginRight="110dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:src="@drawable/logo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:visibility="visible"
            android:id="@+id/layout_user_profile"
            android:layout_marginTop="14dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User Profile"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textSize="18dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This is User Name"
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:layout_marginTop="16dp"
                        android:textSize="14dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="912345675"
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:layout_marginTop="14dp"
                        android:textSize="14dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="user@gmail.com"
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:layout_marginTop="14dp"
                        android:textSize="14dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:textColor="#1E90FF"
                        android:id="@+id/txt_edtprofile"
                        android:layout_marginTop="18dp"
                        android:textStyle="bold"
                        android:textSize="18dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LogOut"
                        android:textColor="#1E90FF"
                        android:id="@+id/txt_logout"
                        android:layout_marginTop="18dp"
                        android:textStyle="bold"
                        android:textSize="18dp"/>
                </LinearLayout>
               <!-- <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:background="@drawable/logo">

                </LinearLayout>
-->
            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECENTLY MODE ORDERS"
            android:textColor="#1E90FF"
            android:layout_marginTop="35dp"
            android:textStyle="normal"
            android:textSize="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_marginTop="12dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/logo"
                android:layout_weight="1"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="18dp"
            android:visibility="gone"
            android:id="@+id/layout_edt_profile"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Edit Profile"
                android:textStyle="bold"
                android:textColor="#000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Edit UserName"
                android:textSize="12dp"
                android:inputType="textAutoComplete"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Edit Email"
                android:textSize="12dp"
                android:inputType="textAutoComplete"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Change Password"
                android:textStyle="bold"
                android:layout_marginTop="18dp"
                android:textColor="#000"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Enter Password"
                android:textSize="12dp"
                android:inputType="textAutoComplete"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:hint="Re-Enter Password"
                android:inputType="textAutoComplete"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Update"
                    android:layout_marginTop="12dp"
                    android:textColor="#FFF"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="#FFD700"
                    android:textStyle="normal"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Discard"
                    android:layout_marginTop="12dp"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:id="@+id/but_login"
                    android:layout_marginLeft="10dp"
                    android:background="#FF4500"
                    android:textStyle="normal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>